          <div class='employer-summary-card'>
            <h5><%= @enrol_goal %> employees</h5>
            <h5>ğŸ†</h5>
            <h5><%= number_to_percentage((@employees.count)/@enrol_goal.to_f*100, precision:0) %> complete</h5>
          </div>
          <div class='employer-summary-card'>
            <h5><%= @events_goal %> events</h5>
            <h5>ğŸ†</h5>
            <h5><%= number_to_percentage((@bookings.count)/@events_goal.to_f*100, precision:0) %> complete</h5>
          </div>
          <div class='employer-summary-card'>
            <h5><%= @hours_goal %> hours</h5>
            <h5>ğŸ†</h5>
            <h5><%= number_to_percentage((@hours.count)/@hours_goal.to_f*100, precision:0) %> complete</h5>
          </div>
        </div>

      </div>


      <div data-swap-tabs-target="contentemployees" class="d-none">

        <div class="employee-cards tabcontent" >
          <% @employees.each do |employee| %>
            <div class="card-employee">
              <div class="card-employee-name">
                <h5><%= employee.first_name %> <%= employee.last_name %></h5>
              </div>
              <div class="card-employee-infos">
                <% bookings = employee.bookings.select { |booking| booking.event.date < Time.now } %>
                <% hours = bookings.map { |booking| booking.event.duration } %>
                <p>ğŸ‰ <%= bookings.count %> events attended</p>
                <p>ğŸ™Œ <%= hours.sum %> hours volunteered</p>
              </div>
            </div>
          <% end %>
        </div>

      </div>

