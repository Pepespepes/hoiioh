  <div data-controller="swap-tabs">
    <div class="tabs" >
      <div class="tab">
        <button class="tablinks" data-swap-tabs-target="tabcompany" data-action="click->swap-tabs#activateCompany">Company stats</button>
      </div>
      <div class="tab">
        <button class="tablinks inactive" data-swap-tabs-target="tabemployees" data-action="click->swap-tabs#activateEmployees">Employee stats</button>
      </div>
    </div>

    <div class="container">

      <div data-swap-tabs-target="contentcompany" class="tabcontent">

        <h4 class="dashboard-subheading">Achievements</h4>
        <div class='employer-vol-summary'>
          <div class='employer-summary-card'>
            <h5><%= @employees.count %> employees enrolled</h5>
            <h5>ğŸ‘©</h5>
          </div>
          <div class='employer-summary-card'>
