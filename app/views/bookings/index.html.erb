<div class="container">
  <div class="app">
  <h3 class="carousel-card">Event Registration</h3>
  <% if (current_user.volunteer != nil) && (current_user.volunteer.bookings.empty?) %>
    <h5>Oh no, you are not registered to any events at the moment!ðŸ¥º </h5>
    <a href="/events">Click here</a> <h4> to have a look at more events. </h4>
  <% elsif (current_user.volunteer != nil) %>
    <div class="booking-title">
      <h5> Upcoming Bookings </h5>
    </div>
    <% @upcoming_bookings.each do |booking| %>
      <div class='event-booking-card'>
        <h6 class="booking-index-date"><%= booking.event.date.strftime("%e %b %y") %></h6>
        <p><i class="fas fa-ribbon icon-pink"></i>  <%= booking.event.charity.charity_name %></p>
        <p><i class="fas fa-clock icon-pink"></i>  <%= booking.event.start_time.strftime("%H:%M")%></p>
        <p><i class="fas fa-thumbtack icon-pink"></i>  <%= booking.event.address %></p>
      </div>
    <% end %>

    <div class="booking-title">
    <h5> Past Bookings </h5>
    </div>
    <% @past_bookings.each do |booking| %>
      <div class='event-booking-card'>
        <h6 class="booking-index-date"><%= booking.event.date.strftime("%e %b %y") %></h6>
        <p><i class="fas fa-ribbon icon-pink"></i>  <%= booking.event.charity.charity_name %></p>
        <p><i class="fas fa-clock icon-pink"></i>  <%= booking.event.start_time.strftime("%H:%M")%></p>
        <p><i class="fas fa-thumbtack icon-pink"></i>  <%= booking.event.address %></p>
      </div>
    <% end %>
  <% end %>
</div>
</div>
</div>
