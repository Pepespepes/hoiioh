<div class="container">
  <div class="app">
  <h3 class="carousel-card">Event Registration</h3>
  <% if (current_user.volunteer != nil) && (current_user.volunteer.bookings.empty?) %>
    <h4>Oh no, you are not registered to any events at the moment!🥺 </h4>
    <a href="/events">Click here</a> <h4> to have a look at more events. </h4>
  <% elsif (current_user.volunteer != nil) %>
  <h4> Upcoming Bookings </h4>
    <% @upcoming_bookings.each do |booking| %>
     <div class='event-booking-card'>
  <h6 class="booking-index-date"><%= booking.event.date.strftime("%d/%m/%Y") %></h6>
    <p>🎗️<%= booking.event.charity.charity_name %></p>
    <p>⏰ <%= booking.event.start_time.strftime("%H:%M")%></p>
    <p>📍<%= booking.event.address %></p>
  </div>
  <% end %>
  <h4> Past Bookings </h4>
  <% @past_bookings.each do |booking| %>
     <div class='event-booking-card'>
  <h6 class="booking-index-date"><%= booking.event.date.strftime("%d/%m/%Y") %></h6>
    <p>🎗️<%= booking.event.charity.charity_name %></p>
    <p>⏰ <%= booking.event.start_time.strftime("%H:%M")%></p>
    <p>📍<%= booking.event.address %></p>
  </div>
  <% end %>
  <% end %>
</div>
</div>
