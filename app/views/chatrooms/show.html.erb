<div class="chat-headers">
  <h3>Chat</h3>
</div>
<div class="chatroom_container" data-controller="chat">
  <div class="chat-back">
    <%= link_to :back do %>
      <i class="fas fa-arrow-circle-left icon-pink-clickable"></i>
    <% end %>
  </div>
  <div class="message-container" id="messages" data-chatroom-id="<%= @chatroom.id %>" data-user-id="<%= current_user.id %>">
    <% @chatroom.messages.each do |message| %>
      <%= render 'messages/message', message: message %>
    <% end %>
  </div>
  <div class="container__chatroom">
    <%= simple_form_for [@chatroom, @message], remote: true do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= f.input :content,
                  label: false,
                  placeholder: "Type your message",
                  html: { rows: 4 } %>
        <%= f.button :submit, 'Send', class:"send-button" %>
    <% end %>
  </div>
</div>
